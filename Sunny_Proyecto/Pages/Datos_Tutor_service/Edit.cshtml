@page
@model Sunny_Proyecto.Pages.Datos_Tutor_service.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Datos del Tutor</h4>
<hr />
<body style="background-color:blueviolet;">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Datos_Tutor.Id" />
                <div class="form-group">
                    <label asp-for="Datos_Tutor.Nombre_tutor" class="control-label">Nombre tutor</label>
                    <input asp-for="Datos_Tutor.Nombre_tutor" class="form-control" />
                    <span asp-validation-for="Datos_Tutor.Nombre_tutor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Datos_Tutor.Apellido_Paterno" class="control-label">Apellido Paterno</label>
                    <input asp-for="Datos_Tutor.Apellido_Paterno" class="form-control" />
                    <span asp-validation-for="Datos_Tutor.Apellido_Paterno" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Datos_Tutor.Apellido_Materno" class="control-label">Apellido Materno</label>
                    <input asp-for="Datos_Tutor.Apellido_Materno" class="form-control" />
                    <span asp-validation-for="Datos_Tutor.Apellido_Materno" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Datos_Tutor.Fecha_Nacimiento" class="control-label">Fecha de Nacimiento</label>
                    <input asp-for="Datos_Tutor.Fecha_Nacimiento" class="form-control" />
                    <span asp-validation-for="Datos_Tutor.Fecha_Nacimiento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Datos_Tutor.Nacionalidad" class="control-label">Nacionalidad</label>
                    <input asp-for="Datos_Tutor.Nacionalidad" class="form-control" />
                    <span asp-validation-for="Datos_Tutor.Nacionalidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Datos_Tutor.Ocupacion" class="control-label">Ocupacion</label>
                    <input asp-for="Datos_Tutor.Ocupacion" class="form-control" />
                    <span asp-validation-for="Datos_Tutor.Ocupacion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Datos_Tutor.Ingreso" class="control-label">Ingreso</label>
                    <input asp-for="Datos_Tutor.Ingreso" class="form-control" />
                    <span asp-validation-for="Datos_Tutor.Ingreso" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Datos_Tutor.Telefono" class="control-label">Telefono</label>
                    <input asp-for="Datos_Tutor.Telefono" class="form-control" />
                    <span asp-validation-for="Datos_Tutor.Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>
<div>
    <a asp-page="./Index">volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
